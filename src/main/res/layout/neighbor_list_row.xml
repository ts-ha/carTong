<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:columnCount="2"             android:rowCount="2"
    android:orientation="horizontal"    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"  android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" android:layout_columnSpan="2"
        android:id="@+id/neighbor_carNo"     android:textColor="@android:color/black"
        android:textSize="16sp" android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"  android:id="@+id/neighbor_distance"
        android:layout_height="wrap_content" android:textSize="14sp"
        android:textStyle="bold"             android:layout_marginTop ="3dp"/>

    <TextView
        android:layout_width="wrap_content"  android:id="@+id/neighbor_date"
        android:layout_height="wrap_content" android:textSize="14sp"
        android:layout_marginTop ="3dp"      android:layout_marginLeft="8dp"/>

</GridLayout>

